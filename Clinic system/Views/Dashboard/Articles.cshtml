@model IEnumerable<Article>
@{
    ViewData["Title"] = "المقالات";
    Layout = "_DashboardLayout";
}
<div class="container">
    <div class="d-flex justify-content-end">
        <a asp-action="NewArticle" asp-controller="Dashboard"class="btn btn-primary py-2 px-4" >إضافة مقال</a>
    </div>
    @if(Model.Count() > 0)
    {
        <div class="row row-cols-xxl-3 row-cols-lg-2 row-cols-sm-1">
        @foreach(Article article in Model)
        {
            <div class="p-3">
                <div class="card text-center">
                    <img src="@($"/imgs/thumbnails/{article.Thumbnail}")" class="card-img-top" alt="@article.Title">
                    <div class="card-body">
                        <h5 class="card-title">@article.Title</h5>
                        <a asp-action="UpdateArticle" asp-controller="Dashboard" asp-route-id="@article.Id" class="btn btn-warning">تعديل</a>
                        <a asp-action="DeleteArticle" asp-controller="Dashboard" asp-route-id="@article.Id" class="btn btn-danger">حذف</a>
                    </div>
                </div>
            </div>
        }
        </div>
    }
    else
    {
        <h2 class="text-warning">لا يوجد مقالات لعرضها</h2>
    }
</div>
