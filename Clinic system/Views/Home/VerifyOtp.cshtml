@model TrackViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "متابعة حجوزاتي";
}

<div class="container d-flex flex-column align-items-center" style="padding:20vh 0">
    <h2>الرجاء إدخال رقم التأكيد المرسل إلى الإيميل</h2>
    <form method="post" asp-action="VerifyOtp" asp-controller="Home" style="max-width:400px; margin: 20px 0">
        <input asp-for="PhoneNumber" hidden>
        <input asp-for="EmailAddress" hidden>

        <div class="form-floating mb-3">
            <input asp-for="Otp" required class="form-control" placeholder="">
            <label asp-for="Otp">رقم التأكيد</label>
            <span asp-validation-for="Otp"></span>
        </div>
        <div asp-validation-summary="ModelOnly" class="mb-2"></div>
        <input type="submit" class="btn btn-success" value="إرسال" />
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial">
}
