@model IEnumerable<Patient>
@{
    ViewData["Title"] = "المرضى";
    Layout = "_DashboardLayout";
}
<table class="table table-bordered table-hover">
    <thead>
        <tr class="bg-light">
            <th>رقم المريض</th>
            <th>الإسم</th>
            <th>رقم الهاتف</th>
            <th>الإيميل</th>
            <th>الزيارات</th>
            <th>خيارات</th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count()<=0)
        {
            <tr class="bg-warning ">
                <td colspan="6">لا يوجد مرضى لعرضهم</td>
            </tr>
        }
        else
        {
            foreach(var patient in Model)
            {
                <tr>
                    <td>@patient.PatientId</td>
                    <td>@patient.FullName</td>
                    <td>@patient.PhoneNumber</td>
                    <td>@patient.Email</td>
                    <td>@patient.Appointments.Count</td>
                    <td>
                        <a asp-action="PatientRecords" asp-controller="Dashboard" asp-route-id="@patient.PatientId" class="btn btn-info">التاريخ الطبي</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
